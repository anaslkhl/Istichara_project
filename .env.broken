cat > .env.laragon.example << 'EOF'
# Laragon-Specific Environment Variables
APP_NAME="Istichara"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://istichara.test

# Laragon MySQL Settings
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=istichara
DB_USERNAME=root
DB_PASSWORD=

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Laragon default mail settings
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
EOF


